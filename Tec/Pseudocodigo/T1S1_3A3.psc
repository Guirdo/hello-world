Proceso T1S1_3A3
	
	Definir radio,area,perimetro,volumen Como Real;
	
	Escribir "Ingrese el radio de la circunferencia, en cm";
	Leer radio;
	
	area <- 3.1416*radio^2;
	perimetro<-2*3.1416*radio;
	volumen<-((4/3)*3.1416)*radio^3;
	
	Escribir "Area: ",area," cm^²";
	Escribir "Perimetro: ",perimetro," cm";
	Escribir "Volumen: ",volumen," cm^3";
	
	
FinProceso
